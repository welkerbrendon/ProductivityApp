<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brendon.productivityapp.EditPlan">

    <TextView
        android:id="@+id/textViewPlanExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="@string/plan_explanation_message"/>

    <EditText
        android:id="@+id/textEditorPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPlanExplanation"
        android:hint="Enter Plan"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEditorPlan"
        android:textAllCaps="false"
        android:text="Home Screen"
        android:onClick="startMainActivity"/>

</RelativeLayout>
