<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brendon.productivityapp.MessagingActivity">

    <EditText
        android:id="@+id/textFieldPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_alignParentTop="true"
        android:hint="Enter Phone Number"/>

    <EditText
        android:id="@+id/textFieldMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFieldPhoneNumber"
        android:inputType="textMultiLine"
        android:hint="Enter Text"/>

    <Button
        android:id="@+id/buttonSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFieldMessage"
        android:text="Send SMS"/>

</RelativeLayout>
