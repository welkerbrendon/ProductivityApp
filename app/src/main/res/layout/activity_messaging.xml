<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brendon.productivityapp.MessagingActivity">

    <EditText
        android:id="@+id/textFieldPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_alignParentTop="true"
        android:hint="@string/unused_phone_number"/>

    <EditText
        android:id="@+id/textFieldMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFieldPhoneNumber"
        android:inputType="textMultiLine"
        android:hint="@string/unused_enter_text"/>

    <Button
        android:id="@+id/buttonSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFieldMessage"
        android:text="@string/unused_send_sms"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonSendSMS"
        android:layout_below="@+id/buttonSendSMS"
        android:text="@string/back"
        android:onClick="startMainActivity"/>

</RelativeLayout>
